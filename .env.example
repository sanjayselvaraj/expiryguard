# ExpiryGuard Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Email Configuration
# ===================
# Gmail SMTP settings (use App Password, not regular password)
# Create App Password: https://support.google.com/accounts/answer/185833
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-16-char-app-password

# ===================
# Webhook Configuration (Optional)
# ===================
# Slack: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# Discord: Server Settings → Integrations → Webhooks
DISCORD_WEBHOOK_URL=

# Enable/disable webhooks
WEBHOOK_ENABLED=true

# ===================
# Scheduler Configuration
# ===================
# Cron expression for notification schedule (default: 9 AM daily)
SCHEDULER_CRON=0 0 9 * * *

# Timezone for scheduler (default: UTC)
SCHEDULER_TIMEZONE=UTC

# ===================
# Database (for Docker Compose)
# ===================
# These are set in docker-compose.yml, only needed for custom deployments
# DATABASE_URL=jdbc:postgresql://localhost:5432/expiryguard
# DATABASE_USERNAME=expiryguard
# DATABASE_PASSWORD=expiryguard
