# ExpiryGuard Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Email Configuration
# ===================
# SMTP Server Configuration
# For Gmail: smtp.gmail.com / 587 (use App Password: https://support.google.com/accounts/answer/185833)
# For Outlook: smtp-mail.outlook.com / 587
# For Yahoo: smtp.mail.yahoo.com / 587
# For custom SMTP: your-smtp-server.com / 587 or 465
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-16-char-app-password

# ===================
# Webhook Configuration (Optional)
# ===================
# Slack: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# Discord: Server Settings → Integrations → Webhooks
DISCORD_WEBHOOK_URL=

# Enable/disable webhooks
WEBHOOK_ENABLED=true

# ===================
# Scheduler Configuration
# ===================
# Cron expression for notification schedule (default: 9 AM daily)
SCHEDULER_CRON=0 0 9 * * *

# Timezone for scheduler (default: UTC)
SCHEDULER_TIMEZONE=UTC

# ===================
# Database (for Docker Compose)
# ===================
# Optional: Override default database credentials
# Defaults are fine for local development
POSTGRES_DB=expiryguard
POSTGRES_USER=expiryguard
POSTGRES_PASSWORD=expiryguard
